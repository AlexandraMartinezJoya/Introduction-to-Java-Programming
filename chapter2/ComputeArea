package chapter2;

public class ComputeArea {

	public static void main(String[] args) {
		
		double radius;
		double area;
		
		//Assign a radius
		radius = 20;
		
		//Compute area
		area = radius * radius * 3.14159;
		
		//Display result 
		System.out.println("The area of the circle of radius " + radius + " is " + area);	
	}

}
